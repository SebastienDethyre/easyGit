}

frm_infos_parser(){
    case $1 in
        1) git_log ;;
        2) git_reflog ;;
        3) git_status ;;
        4) git_branch ;;
        *) fonction_git ;;
        esac
}

fonction_infos(){
        menuchoice=$(frm_infos)
        frm_infos_parser ${menuchoice%|*}
        if [ $quitter!="1" ] ; then
                fonction_infos
        fi
}

