frm_git(){
	en_tete
	zenity --list --width=400 --height=515 --text='<span font-family=\"Arial\">'"$EN_TETE"'</span>' \
    	--title="Git" \
    	--ok-label="Sélectionner" \
    	--cancel-label="Quitter" \
    	--hide-column 1 --column "" --column "" --column "" --column "" --column "" \
    	1 "  1" "				        $MD" "			     " "🗃"\
    	2 "  2" "				      $MF" "			     " "📑"\
    	0 "" "" "" "" \
    	3 "  3" "			         $MI" "			     " "📋"\
    	4 "  4" "				    $GK" "			     " "⎇"\
    	5 "  5" "				         $SC" "			     " "🗑" 2>/dev/null;

}

frm_git_parser(){
    case $1 in
        1) fonction_depots ;;
        2) fonction_fichiers ;;
	3) fonction_infos ;;
	4) git_checkout ;;
	5) clear_screen ;;
        *)
            quitter="1"
            _quitter ;;
    esac
}

fonction_git(){
	checkFilesChanged
	menuchoice=$(frm_git)
	frm_git_parser ${menuchoice%|*}
	if [ $quitter!="1" ] ; then
         	fonction_git
    	fi
}

fonction_git
exit 0
